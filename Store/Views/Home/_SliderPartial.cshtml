@using Store.Models.DTOs
@using Store.Models.Results

@model IDataResult<List<SliderDTO>>

@if (Model is not null)
{
    <!-- Slider Section -->
    <div class="mb-5">
        @*     <div class="bg-img-hero" style="background-image: url(../../uploads/slider/background.jpg); background-size: cover;"> *@
        <div class="bg-img-hero bg-gray-1">
            <div class="container min-height-420 overflow-hidden">
                <div class="js-slick-carousel u-slick"
                     data-autoplay="true"
                     data-autoplay-speed="7000"
                     data-pagi-classes="text-center position-absolute right-0 bottom-0 left-0 u-slick__pagination u-slick__pagination--long justify-content-start mb-3 mb-md-4 offset-xl-3 pl-2 pb-1">

                     @foreach (var slider in Model.Data)
                    {
                        <div class="js-slide bg-img-hero-center">
                            <div class="row min-height-420 py-7 py-md-0 text-center">
                                <div class="offset-xl-3 col-xl-4 col-6 mt-md-8">
                                    <h1 class="font-size-64 text-lh-57 font-weight-light"
                                        data-scs-animation-in="fadeInUp">
                                        @*  soft<span class="d-block font-size-55">koleksiyon</span> *@
                                        @slider.Title
                                    </h1>
                                    <h6 class="font-size-15 pt-2 font-weight-bold mb-3"
                                        data-scs-animation-in="fadeInUp"
                                        data-scs-animation-delay="200">
                                        @slider.Description
                                    </h6>
                                    <hr />
                                    <div class="mb-4"
                                         data-scs-animation-in="fadeInUp"
                                         data-scs-animation-delay="300">
                                        <div class="font-size-50 font-weight-bold text-lh-45">
                                            <sup class="">&#8378</sup>@slider.Price@* <sup class="">.99</sup> *@
                                        </div>
                                        <span class="font-size-12 text-right">*başlayan fiyatlarla</span>
                                    </div>
                                    <a href="~/@slider.Link" class="btn btn-primary transition-3d-hover rounded-lg font-weight-normal py-2 px-md-7 px-3 font-size-16"
                                       data-scs-animation-in="fadeInUp"
                                       data-scs-animation-delay="400">
                                        İncele
                                    </a>
                                </div>
                                <div class="col-xl-5 col-6  d-flex align-items-center"
                                     data-scs-animation-in="zoomIn"
                                     data-scs-animation-delay="500">
                                    <img class="img-fluid" src="~/uploads/slider/416x420/@slider.PhotoUrl" alt="@slider.PhotoUrl">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- End Slider Section -->
}

