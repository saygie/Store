@using Store.Models.DTOs
@model List<ProductDTO>

@if (Model.Count > 0)
{
    <div class="mb-8">
        <div class="border-bottom border-color-1 mb-5">
            <h3 class="section-title section-title__sm mb-0 pb-2 font-size-18">Çok Satanlar</h3>
        </div>
        <ul class="list-unstyled">
            @foreach (var product in Model)
            {
                <li class="mb-4">
                    <div class="row">
                        <div class="col-auto">
                            <a href="~/p/@product.Slug" class="d-block width-75">
                                <img class="img-fluid" src="~/uploads/products/320X300/@product.ProductPhotos?.FirstOrDefault()?.Url" alt="@product.Name">
                            </a>
                        </div>
                        <div class="col">
                            <h3 class="text-lh-1dot2 font-size-14 mb-0"><a href="~/p/@product.Slug">@product.Name</a></h3>
@*                             <div class="text-warning text-ls-n2 font-size-16 mb-1" style="width: 80px;">
                                <small class="fas fa-star"></small>
                                <small class="fas fa-star"></small>
                                <small class="fas fa-star"></small>
                                <small class="fas fa-star"></small>
                                <small class="far fa-star text-muted"></small>
                            </div> *@
                            <div class="font-weight-bold">
                                @if (product.Discount > 0)
                                {
                                    <del class="font-size-11 text-gray-9 d-block">@product.PriceWithoutDiscount.ToString("N0")<sup class="">₺</sup></del>
                                }

                                <ins class="font-size-15 text-red text-decoration-none d-block">@product.Price.ToString("N0")<sup class="">₺</sup></ins>
                            </div>
                        </div>
                    </div>
                </li>
            }
            
        </ul>
    </div>
}
