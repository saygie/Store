@page
@model LoginModel

@{
    ViewData["Title"] = "Üyelik Girişi";
}
<!-- breadcrumb -->
<div class="bg-gray-13 bg-md-transparent">
    <div class="container">
        <!-- breadcrumb -->
        <div class="my-md-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-3 flex-nowrap flex-xl-wrap overflow-auto overflow-xl-visble">
                    <li class="breadcrumb-item flex-shrink-0 flex-xl-shrink-1"><a href="~/">Anasayfa</a></li>
                    <li class="breadcrumb-item flex-shrink-0 flex-xl-shrink-1 active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>
        </div>
        <!-- End breadcrumb -->
    </div>
</div>
<!-- End breadcrumb -->

<div class="container">
    <div class="my-4 my-xl-8">
        <div class="row">
            <div class="col-md-5 ml-xl-4 offset-xl-4 mr-md-auto mr-xl-0 mb-8 mb-md-0">
                <!-- Title -->
                <div class="border-bottom border-color-1 mb-6">
                    <h3 class="d-inline-block section-title mb-0 pb-2 font-size-26">Giriş Yap</h3>
                </div>
                <p class="text-gray-90 mb-4">Merhaba, giriş yapmak için lütfen bilgilerinizi giriniz.</p>
                <!-- End Title -->
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3 form-group">
                        <label asp-for="Input.Email" class="form-label">Eposta <span class="text-danger">*</span></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" aria-label="Eposta adresinizi giriniz" required />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 form-group">
                        <label asp-for="Input.Password" class="form-label">Şifre <span class="text-danger">*</span></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" aria-label="Şifrenizi giriniz" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="js-form-message mb-3">
                        <div class="custom-control custom-checkbox d-flex align-items-center">
                            <input asp-for="Input.RememberMe" type="checkbox" class="custom-control-input" id="rememberCheckbox" name="rememberCheckbox"
                                   data-error-class="u-has-error"
                                   data-success-class="u-has-success">
                            <label asp-for="Input.RememberMe" class="custom-control-label form-label" for="rememberCheckbox">
                                Beni Hatırla
                            </label>
                        </div>
                    </div>
                    <div class="mb-1">
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary-dark-w px-5">Giriş Yap</button>
                        </div>
                        <hr />
                        <div class="mb-2">
                            <div class="mb-1">
                                <a class="text-secondary" id="forgot-password" asp-page="./ForgotPassword">Şifremi unuttum?</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
