@using Store.Models.DTOs
@using Store.Models.Results
@{
    IDataResult<List<CategoryDTO>> Categories = ViewBag.Categories;
}
@model ProductDTO
@{
    ViewBag.Title = "Add";
}

<div class="row clearfix">
    <div class="col-md-12">
        <div class="card">
            <div class="body">
                <div class="card-inner">
                    <h4 class="card-inner-header">Ürün Ekle</h4>
                    <small>Ürün ekleme formu.</small>
                    <div class="demo">
                        <form class="form-horizontal" id="form_validation" method="POST" action="~/Panel/Product/Add">
                            <div class="row">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                    <label>Ürün Adı</label>
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="Name" placeholder="Ürün adı giriniz..." required />
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                    <label>Ürün Kodu</label>
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="Code" placeholder="Ürün adı giriniz..." required value="@Guid.NewGuid().ToString().Split('-')[0]" />
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                    <label for="skill_1">Kategori</label>
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <select class="form-control" id="skill_1" name="CategoryId" required>
                                            <option value="" selected>Kategori Seçiniz...</option>
                                            @foreach (var item in Categories.Data.Where(a => a.ParentCategoryId != 0))
                                            {
                                                <option value="@item.Id">@item.ParentCategory.Name/@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                    <label>Açıklama</label>
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <textarea id="summernote" name="Description" class="summernote" required></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                    <label>Stok</label>
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="Stock" placeholder="Stok giriniz..." required value="0" />
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                    <label>İndirimsiz Fiyat</label>
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="PriceWithoutDiscount" placeholder="İndirimsiz Fiyat giriniz..." required value="0" />
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                    <label>Fiyat</label>
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="Price" placeholder="Fiyat giriniz..." required value="0" />
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input type="checkbox" id="IsFeatured" name="IsFeatured" value="true">
                                        <label for="IsFeatured">Öne Çıkan Ürünlerde Göster?</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input class="form-control" type="checkbox" id="IsDiscounted" name="IsDiscounted" value="true">
                                        <label for="IsDiscounted">İndirimli Ürünlerde Göster?</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input class="form-control" type="checkbox" id="IsMostSelled" name="IsMostSelled" value="true">
                                        <label for="IsMostSelled">Çok Satan Ürünlerde Göster?</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input class="form-control" type="checkbox" id="IsNew" name="IsNew" value="true">
                                        <label for="IsNew">Yeni Ürünlerde Göster?</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input class="form-control" type="checkbox" id="IsSpecialOffer" name="IsSpecialOffer" value="true">
                                        <label for="IsSpecialOffer">Özel Teklifli Ürünlerde Göster?</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                    <label>Özel Teklif Bitiş Tarihi</label>
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input type="datetime" id="SpecialOfferEndDate" name="SpecialOfferEndDate" value="@DateTime.Now.AddDays(1)">
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input type="checkbox" id="IsActive" name="IsActive" value="true">
                                        <label for="IsActive">Aktif Mi? (Seçili olursa yayınlanır.)</label>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary waves-effect m-l-100" type="submit">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section css {
    <!--THIS PAGE LEVEL CSS-->
    <link href="~/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
    <link href="~/plugins/summernote/dist/summernote.css" rel="stylesheet" />
}
@section scripts {
    <!--THIS PAGE LEVEL JS-->
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-steps/jquery.steps.js"></script>
    <script src="~/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/js/pages/forms/form-validation.js"></script>

    <script src="~/plugins/summernote/dist/summernote.min.js"></script>
    <script src="~/js/pages/forms/summernote.js"></script>

}
