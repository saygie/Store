@using Store.Models.DTOs
@using Store.Models.Results
@{
    IDataResult<List<CategoryDTO>> Categories = ViewBag.Categories;
}
@model CategoryDTO
@{
    ViewBag.Title = "Add";
}
<!-- Basic Validation -->
<div class="row clearfix">
    <div class="col-md-12">
        <div class="card">
            <div class="body">
                <div class="card-inner">
                    <h4 class="card-inner-header">Kategori Ekle</h4>
                    <small>Kategori ekleme formu.</small>
                    <div class="demo">
                        <form class="form-horizontal" id="form_validation" method="POST" action="~/Panel/Category/Add">
                            <div class="row">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                    <label>Kategori Adı</label>
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="Name" placeholder="Kategori adı giriniz..." required />
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                    <label>Seo Url</label>
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="SeoUrl" placeholder="Kategori Seo Url giriniz..." required />
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                    <label for="skill_1">Ana Kategori</label>
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <select class="form-control" id="skill_1" name="ParentCategoryId">
                                            <option value="0" selected>Ana Kategori Yap</option>
                                            @foreach (var item in Categories.Data.Where(a => a.ParentCategoryId == 0))
                                            {
                                                <option value="@item.Id">- @item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1 col-xs-4 col-xs-4 form-control-label">
                                </div>
                                <div class="col-md-11 col-xs-8 col-xs-8">
                                    <div class="form-group">
                                        <input type="checkbox" id="checkbox_1" name="IsActive" value="true">
                                        <label for="checkbox_1">Aktif Mi? (Seçili olursa anasayfada yayınlanır.)</label>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary waves-effect m-l-100" type="submit">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #END# Basic Validation -->
@section css {
    <!--THIS PAGE LEVEL CSS-->
    <link href="~/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
}
@section scripts {
    <!--THIS PAGE LEVEL JS-->
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-steps/jquery.steps.js"></script>
    <script src="~/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/assets/js/pages/forms/form-validation.js"></script>
}
