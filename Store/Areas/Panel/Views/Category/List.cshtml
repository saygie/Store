@using Store.Models.DTOs
@model Store.Models.Results.IDataResult<List<CategoryDTO>>

@{
    ViewBag.Title = "Liste";

}
<div class="row clearfix">
    <div class="col-lg-3">
        <div class="widget style2 bg-green hover-zoom-effect">
            <div class="col-xs-4 widget-icon">
                <i class="material-icons">format_list_bulleted</i>
            </div>
            <div class="col-xs-8 widget-body text-right">
                <span>Kategori Sayısı </span>
                <h2 class="num count-to" data-from="0" data-to="@ViewBag.CategoryCount.Data" data-speed="1000" data-fresh-interval="20">@ViewBag.CategoryCount.Data</h2>
            </div>
        </div>
    </div>
</div>

<!-- Basic Examples -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="card-header">
                <h4>
                    Kategori Listesi
                </h4>
                <small>Kategoriler listelenir, düzenlenir. Silenen Kategoriler listelenmez.</small>
            </div>
            <div class="body">
                <table class="table table-bordered table-striped table-hover basic-example dataTable">
                    <thead>
                        <tr>
                            <th>İşlem</th>
                            <th>Kategori</th>
                            <th>Ana Kategori</th>
                            <th>Id</th>
                            <th>Aktif Mi?</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>İşlem</th>
                            <th>Kategori</th>
                            <th>Ana Kategori</th>
                            <th>Id</th>
                            <th>Aktif Mi?</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.Data.OrderByDescending(a=>a.Id))
                        {
                            <tr>
                                <th width="100px">
                                    <a class="btn btn-xs btn-warning" href="~/Panel/Category/Update?id=@item.Id">Düzenle</a>
                                    <a class="btn btn-xs btn-danger" href="~/Panel/Category/Delete?id=@item.Id">Sil</a>
                                </th>
                                <th><a href="javascript:void(0)">@item.Name</a></th>
                                <td>@item.ParentCategory?.Name</td>
                                <td>@item.Id</td>
                                @if (item.IsActive)
                                {
                                    <td style="color:green">Aktif</td>
                                }
                                else
                                {
                                    <td style="color:red">Pasif</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- #END# Basic Examples -->
